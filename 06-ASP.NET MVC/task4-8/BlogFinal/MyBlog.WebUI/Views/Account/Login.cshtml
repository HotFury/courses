@model MyBlog.WebUI.Models.LoginModel

@{
    ViewBag.Title = "Войти";
}
@section right_sidebar_style{
    <link href="@Url.Content("~/Content/Styles/RegisterLogin.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/Validation.css")" rel="stylesheet" type="text/css" />
}
@section single_column{
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Форма входа</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-field" })
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-field" })
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "remember" })
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <input id="login" type="submit" value="Войти" />
    </fieldset>
    <p>
        @Html.ActionLink("Зарегистрироваться", "Register") если у Вас нет аккаунта.
    </p>
}
</section>
    }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
