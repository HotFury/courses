@model MyBlog.WebUI.Models.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}
@section right_sidebar_style{
    <link href="@Url.Content("~/Content/Styles/RegisterLogin.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Styles/Validation.css")" rel="stylesheet" type="text/css" />
}
@section single_column{
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Новый аккаунт</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Форма регистрации</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new {@class = "form-field" })
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-field" })
                @Html.ValidationMessageFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-field" })
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-field" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input id="login" type="submit" value="Зарегестрироваться" />
    </fieldset>
}
    }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
